{% extends 'base.html.twig' %}

{% block body %}
    <h1>Torrents list</h1>

    <table class="table table-responsive table-condensed table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>ID Distant</th>
            <th>ID Interne</th>
            <th>User</th>
            <th>Name</th>
            <th>Statut</th>
        </tr>
        </thead>
        <tbody>
        {% for torrent in torrents %}
            <tr>
                <td><a href="{{ path('torrent_show', { 'id': torrent.id }) }}">{{ torrent.id }}</a></td>
                <td>{{ torrent.idT411 }}</td>
                <td>{{ torrent.idTransmission }}</td>
                <td>{% if torrent.user %}{{ torrent.user.username }}{% else %}{{ 'Aucun' }}{% endif %}</td>
                <td>{{ torrent.name }}</td>
                <td><span class="label{% if torrent.status %} {{ torrent.status.color }}{% endif %}">{% if torrent.status %}{{ torrent.status.name }}{% endif %}</span></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
