{% trans_default_domain 'FOSUserBundle' %}


<section id="login-form" class="container">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            {% if error %}
                <div class="alert alert-danger login-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group">
                    <label for="username" class="col-sm-5 control-label">{{ 'security.login.username'|trans }}</label>
                    <div class="col-sm-7">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required" placeholder="{{ 'security.login.username'|trans }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-5 control-label">{{ 'security.login.password'|trans }}</label>
                    <div class="col-sm-7">
                        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'security.login.password'|trans }}" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" > {{ 'security.login.remember_me'|trans }}
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-10">
                        <button type="submit" class="btn btn-primary" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>